{% extends 'base.html.twig' %}

{% set activeTab = "vacation" %}

{% block title %}Urlopy{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            <h1 class="my-4">Urlopy czekające na zatwierdzenie</h1>
            <table class="table table-striped">
                <tr>
                    <th scope="col">Pracownik</th>
                    <th scope="col">Początek Urlopu</th>
                    <th scope="col">Koniec Urlopu</th>
                    <th scope="col">Opcje</th>
                </tr>
                {% for vacation in vacations %}
                    {% if vacation.status=="waiting_for_accept" %}
                        <tr>
                            <td>{{ vacation.employee }}</td>
                            <td>{{ vacation.startDate|date('d.m.Y') }}</td>
                            <td>{{ vacation.endDate|date('d.m.Y') }}</td>
                            <td>
                                <a href="{{ path('vacation_edit', {vacation: vacation.id}) }}"
                                   class="btn btn-sm btn-primary mr-2">
                                    <i class="fas fa-pen"></i>Edytuj
                                </a>
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
            </table>
            <a href="{{ path('vacation_add') }}" class="btn btn-primary">Złóż wniosek</a>
            <a href="{{ path('vacation') }}" class="btn btn-primary">Wróć do zatwierdzonych urlopów</a>
        </div>
    </div>
{% endblock %}
