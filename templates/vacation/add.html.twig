{% extends 'base.html.twig' %}

{% set activeTab = "vacation" %}

{% block title %}Dodawanie urlopu{% endblock %}

{% block body %}
    <h1 class="my-4">Dodawanie urlopu</h1>
    {{ form_start(form) }}
    {{ form_row((form.beginningOfVacation)) }}
    {{ form_row((form.endingOfVacation)) }}
    <button type="submit" class="btn btn-primary">Dodaj Urlop</button>
    <a href="{{ path('tasks') }}" class="btn btn-secondary">Wróć do listy Urlopów</a>
    {{ form_end(form) }}
{% endblock %}


