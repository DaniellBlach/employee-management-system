{% extends 'base.html.twig' %}

{% set activeTab = "milestones" %}

{% block title %}Kamienie Milowe{% endblock %}

{% block body %}
    <h1 class="my-4">Lista kamieni milowych</h1>
    <div class="header"></div>
    <div class="table-responsive">
    <table class="table table-hover table-bordered">
        <thead>
        <tr>
        <th scope="col">Nazwa</th>
        <th scope="col">Czas realizacji</th>
        <th scope="col">Opis</th>
        {% if is_granted('ROLE_EMPLOYER') %}
            <th scope="col">Operacje</th>
        {% endif %}
        </tr>
        </thead>
        <tbody>
        {% for milestone in milestones %}
            <tr>
                <td>{{ milestone.name }}</td>
                <td>{{ milestone.realizationTime|date('d.m.Y') }}</td>
                <td>{{ milestone.description }}</td>
                {% if is_granted('ROLE_EMPLOYER') %}
                    <td>
                        <a href="{{ path('milestone_show', {milestone: milestone.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fas fa-info"></i>Opis
                        </a>
                        <a href="{{ path('milestone_edit', {milestone: milestone.id}) }}" class="btn btn-sm btn-primary mx-2">
                            <i class="fas fa-pen"></i>Edytuj
                        </a>
                        <button data-path="{{ path('milestone_delete', {milestone: milestone.id}) }}"
                                data-name="{{ milestone }}"
                                class="btn btn-sm btn-danger btn--delete">
                            <i class="fas fa-trash"></i>Usuń
                        </button>
                    </td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    {% if is_granted('ROLE_EMPLOYER') %}
        <a href="{{ path('milestone_add') }}" class="btn btn-primary" style="position: absolute; top: 50px; right: 16pt;">Dodaj kamień milowy</a>
    {% endif %}
{% endblock %}
