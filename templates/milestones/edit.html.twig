{% extends 'base.html.twig' %}

{% set activeTab = "milestones" %}

{% block title %}Edycja kamienia milowego{% endblock %}

{% block body %}
    <div class="header">
        <h1>Edycja kamienia milowego</h1>
    </div>
    {{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.realizationTime) }}
    {{ form_row(form.description) }}
    <button type="submit" class="btn btn-primary">Zapisz</button>
    <a href="{{ path('milestones') }}" class="btn btn-link">Wróć do listy kamieni milowych</a>
    {{ form_end(form) }}
{% endblock %}