{% extends 'base.html.twig' %}

{% block title %}Hello SettingsController!{% endblock %}

{% block body %}
    <h1 class="my-4">Edycja hasła</h1>
    {{ form_start(form) }}
    {{ form_row(form.password) }}
    {{ form_row(form.newPassword) }}
    {{ form_row(form.confirmNewPassword) }}
    <button type="submit" class="btn btn-primary">Zapisz</button>
    <a href="{{ path('settings') }}" class="btn btn-secondary">Wróć do ustawień</a>
    {{ form_end(form) }}
{% endblock %}
